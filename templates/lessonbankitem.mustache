<div class="itemcontainer">
    <h3 class="itemname">{{name}}</h3>
    <div class="row">
        <div class="col-md-6">
            <img src="{{posterimage}}" alt="{{name}}" class="searchimg img-responsive">
        </div>
        <div class="col-md-6">
            <div class="d-flex">
                <p>{{language}}</p>
                <p class="ml-2">{{languagelevel}}</p>
            </div>
            <div class="d-flex">
                <p><b>{{#str}}keywords, local_lessonbank{{/str}}</b></p>
                <p class="ml-2">{{keywords}}</p>
            </div>
            <div>
                <p><b>{{#str}}description{{/str}}</b></p>
                <p>{{description}}</p>
            </div>
            <div class="d-flex">
                <p><b>{{#str}}items, local_lessonbank{{/str}}</b></p>
                <p class="minilesson_items ml-2">
                    {{#itemtypes}}
                        {{{text}}}{{^islast}},{{/islast}}
                    {{/itemtypes}}
                </p>
            </div>
        </div>
    </div>
    <a href="{{viewurl}}" class="btn btn-primary mt-2 mb-2"> {{#str}}preview{{/str}}</a>
    <a data-id="{{id}}" data-action="download" data-download="{{name}}" class="btn btn-primary mt-2 mb-2"> {{#str}}download{{/str}}</a>
</div>